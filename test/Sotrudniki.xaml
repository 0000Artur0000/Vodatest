<UserControl x:Class="test.Sotrudniki"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:test"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="0,0,0,60" Background="#19000000" ScrollViewer.VerticalScrollBarVisibility="Auto"  >
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <WrapPanel x:Name="data" HorizontalAlignment="Center" VerticalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            </ScrollViewer>
        </Grid>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="176" Height="35" FontFamily="Arial Black" FontSize="20" Click="Button_Click"/>
        <Button Content="Добавить" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="176" Height="35" FontFamily="Arial Black" FontSize="20" Click="Button_Click"/>

    </Grid>
</UserControl>
